    <script>
        const emailInput = document.getElementById('email');
        const passwordInput = document.getElementById('password');
        const loginButton = document.getElementById('login-button');
        const emailIcon = document.getElementById('email-icon');
        const passwordIcon = document.getElementById('password-icon');
        const errorMessage = document.getElementById('error-message');

        function validateEmail(email) {
            return email.length > 0 && email.includes('@') && email.includes('.');
        }

        function validatePassword(password) {
            return password.length >= 6;
        }

        function setIconStyle(element, isValid) {
            if (isValid) {
                element.innerHTML = '<svg xmlns="http://www.w3.org/2000/svg" class="karrot-orange w-5 h-5" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><polyline points="20 6 9 17 4 12"></polyline></svg>';
                element.classList.remove('text-gray-400');
            } else {
                if (element === emailIcon) {
                    element.innerHTML = '<svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"></path><polyline points="22,6 12,13 2,6"></polyline></svg>';
                } else if (element === passwordIcon) {
                    element.innerHTML = '<svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><rect width="18" height="11" x="3" y="11" rx="2" ry="2"></rect><path d="M7 11V7a5 5 0 0 1 10 0v4"></path></svg>';
                }
                element.classList.add('text-gray-400');
            }
        }

        function validateForm() {
            const isEmailValid = validateEmail(emailInput.value);
            const isPasswordValid = validatePassword(passwordInput.value);

            setIconStyle(emailIcon, isEmailValid);
            setIconStyle(passwordIcon, isPasswordValid);
            
            if (isEmailValid && isPasswordValid) {
                loginButton.disabled = false;
                loginButton.classList.remove('opacity-50', 'cursor-not-allowed');
                errorMessage.classList.add('hidden');
            } else {
                loginButton.disabled = true;
                loginButton.classList.add('opacity-50', 'cursor-not-allowed');
            }
        }

        // 초기 로드 시 유효성 검사 및 이벤트 리스너 설정
        document.addEventListener('DOMContentLoaded', () => {
            emailInput.addEventListener('input', validateForm);
            passwordInput.addEventListener('input', validateForm);
            document.getElementById('login-form').addEventListener('submit', (e) => {
                e.preventDefault();
                if (loginButton.disabled) {
                    errorMessage.textContent = '이메일 형식과 비밀번호(최소 6자)를 확인해주세요.';
                    errorMessage.classList.remove('hidden');
                } else {
                    errorMessage.textContent = `로그인 시도: 이메일: ${emailInput.value}`;
                    errorMessage.classList.remove('hidden');
                    errorMessage.classList.remove('text-red-400');
                    errorMessage.classList.add('text-green-400');
                }
            });
            validateForm(); // 초기 상태 설정
        });
    </script>
</body>
</html>
