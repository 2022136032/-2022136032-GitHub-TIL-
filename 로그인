        <!-- Body Content -->
        <main class="p-6">
            <h1 class="text-white text-3xl font-extrabold mt-8 mb-10">당근에 오신 것을 환영해요!</h1>

            <!-- Form -->
            <form id="login-form">
                <!-- Email Field -->
                <div class="mb-5 relative">
                    <label for="email" class="text-gray-400 text-sm absolute top-[-10px] left-0 pointer-events-none transition-all duration-300">이메일 주소</label>
                    <input type="email" id="email" class="custom-input pt-4" placeholder=" " required oninput="validateForm()">
                    <div id="email-icon" class="absolute right-0 top-1/2 -translate-y-1/2 mt-2 text-gray-400">
                        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"></path><polyline points="22,6 12,13 2,6"></polyline></svg>
                    </div>
                </div>

                <!-- Password Field -->
                <div class="mb-8 relative">
                    <label for="password" class="text-gray-400 text-sm absolute top-[-10px] left-0 pointer-events-none transition-all duration-300">비밀번호</label>
                    <input type="password" id="password" class="custom-input pt-4" placeholder=" " required oninput="validateForm()">
                    <div id="password-icon" class="absolute right-0 top-1/2 -translate-y-1/2 mt-2 text-gray-400">
                        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><rect width="18" height="11" x="3" y="11" rx="2" ry="2"></rect><path d="M7 11V7a5 5 0 0 1 10 0v4"></path></svg>
                    </div>
                </div>

                <!-- Login Button -->
                <button id="login-button" type="submit" class="w-full py-3 rounded-lg text-white text-lg font-bold transition duration-300 bg-karrot-orange opacity-50 cursor-not-allowed" disabled>
                    로그인
