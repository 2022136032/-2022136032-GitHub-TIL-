// lib/main.dart 파일 안의 build 메서드 내부
Widget build(BuildContext context) {
  return Scaffold(
    body: Center(
      child: Column( // 전체를 세로로 배열
        mainAxisAlignment: MainAxisAlignment.center,
        children: <Widget>[
          // 
          Container(
            width: 300,
            height: 50,
            color: Colors.blue, // 예시 색상
            margin: EdgeInsets.only(bottom: 10),
          ),

          //
          Row(
            mainAxisAlignment: MainAxisAlignment.center,
            children: <Widget>[
              Container(width: 100, height: 100, color: Colors.red), // 첫 번째 사각형
              Container(width: 100, height: 100, color: Colors.green), // 두 번째 사각형
              Container(width: 100, height: 100, color: Colors.yellow), // 세 번째 사각형
            ],
          ),

          // 
          Container(
            width: 300,
            height: 50,
            color: Colors.purple, // 예시 색상
            margin: EdgeInsets.only(top: 10),
          ),
        ],
      ),
    ),
  );
}
